{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/index.js" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ],
  "env": {
    "MONGODB_URI": "MONGODB_URI",
    "JWT_SECRET": "JWT_SECRET"
  },
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  }
}